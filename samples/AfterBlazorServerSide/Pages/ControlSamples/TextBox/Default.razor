@page "/ControlSamples/TextBox"
@using BlazorWebFormsComponents
@using BlazorWebFormsComponents.Enums

<h1>TextBox Samples</h1>

<h2>Single Line TextBox (Default)</h2>
<TextBox Text="Hello World" CssClass="form-control" Width="Unit.Pixel(300)" />
<pre><code>&lt;TextBox Text="Hello World" CssClass="form-control" Width="Unit.Pixel(300)" /&gt;</code></pre>

<hr />

<h2>Editable TextBox (ReadOnly=false)</h2>
<TextBox Text="You can edit this text" ReadOnly="false" CssClass="form-control" Width="Unit.Pixel(300)" />
<pre><code>&lt;TextBox Text="You can edit this text" ReadOnly="false" CssClass="form-control" /&gt;</code></pre>

<hr />

<h2>ReadOnly TextBox (ReadOnly=true)</h2>
<TextBox Text="Cannot edit this text" ReadOnly="true" CssClass="form-control" Width="Unit.Pixel(300)" />
<pre><code>&lt;TextBox Text="Cannot edit this text" ReadOnly="true" CssClass="form-control" /&gt;</code></pre>

<hr />

<h2>Password TextBox</h2>
<TextBox TextMode="TextBoxMode.Password" Placeholder="Enter password" CssClass="form-control" Width="Unit.Pixel(300)" />
<pre><code>&lt;TextBox TextMode="TextBoxMode.Password" Placeholder="Enter password" /&gt;</code></pre>

<hr />

<h2>Email TextBox</h2>
<TextBox TextMode="TextBoxMode.Email" Placeholder="Enter email" CssClass="form-control" Width="Unit.Pixel(300)" />
<pre><code>&lt;TextBox TextMode="TextBoxMode.Email" Placeholder="Enter email" /&gt;</code></pre>

<hr />

<h2>Number TextBox</h2>
<TextBox TextMode="TextBoxMode.Number" Placeholder="Enter number" CssClass="form-control" Width="Unit.Pixel(200)" />
<pre><code>&lt;TextBox TextMode="TextBoxMode.Number" Placeholder="Enter number" /&gt;</code></pre>

<hr />

<h2>MultiLine TextBox</h2>
<TextBox TextMode="TextBoxMode.MultiLine" Rows="5" Columns="40" Text="@multiLineText" />
<pre><code>&lt;TextBox TextMode="TextBoxMode.MultiLine" Rows="5" Columns="40" Text="Line 1..." /&gt;</code></pre>

<hr />

<h2>Enabled TextBox (Enabled=true - Default)</h2>
<TextBox Text="Enabled textbox" Enabled="true" CssClass="form-control" Width="Unit.Pixel(300)" />
<pre><code>&lt;TextBox Text="Enabled textbox" Enabled="true" /&gt;</code></pre>

<hr />

<h2>Disabled TextBox (Enabled=false)</h2>
<TextBox Text="Disabled textbox" Enabled="false" CssClass="form-control" Width="Unit.Pixel(300)" />
<pre><code>&lt;TextBox Text="Disabled textbox" Enabled="false" /&gt;</code></pre>

<hr />

<h2>MaxLength (10 characters max)</h2>
<TextBox MaxLength="10" Placeholder="Max 10 chars" CssClass="form-control" Width="Unit.Pixel(200)" />
<pre><code>&lt;TextBox MaxLength="10" Placeholder="Max 10 chars" /&gt;</code></pre>

<hr />

<h2>Styled TextBox</h2>
<TextBox Text="Styled textbox"
         BackColor="WebColor.LightYellow"
         ForeColor="WebColor.Navy"
         BorderColor="WebColor.Blue"
         BorderWidth="Unit.Pixel(2)"
         BorderStyle="BorderStyle.Solid"
         Width="Unit.Pixel(250)" />
<pre><code>&lt;TextBox Text="Styled textbox"
         BackColor="WebColor.LightYellow"
         ForeColor="WebColor.Navy"
         BorderColor="WebColor.Blue"
         BorderWidth="Unit.Pixel(2)"
         BorderStyle="BorderStyle.Solid"
         Width="Unit.Pixel(250)" /&gt;</code></pre>

<hr />

<h2>Date Picker</h2>
<TextBox TextMode="TextBoxMode.Date" CssClass="form-control" Width="Unit.Pixel(200)" />
<pre><code>&lt;TextBox TextMode="TextBoxMode.Date" /&gt;</code></pre>

<hr />

<h2>URL Input</h2>
<TextBox TextMode="TextBoxMode.Url" Placeholder="Enter URL" CssClass="form-control" Width="Unit.Pixel(300)" />
<pre><code>&lt;TextBox TextMode="TextBoxMode.Url" Placeholder="Enter URL" /&gt;</code></pre>

<hr />

<h2>Phone Input</h2>
<TextBox TextMode="TextBoxMode.Phone" Placeholder="Enter phone number" CssClass="form-control" Width="Unit.Pixel(200)" />
<pre><code>&lt;TextBox TextMode="TextBoxMode.Phone" Placeholder="Enter phone number" /&gt;</code></pre>

<hr />

<h2>Search Input</h2>
<TextBox TextMode="TextBoxMode.Search" Placeholder="Search..." CssClass="form-control" Width="Unit.Pixel(250)" />
<pre><code>&lt;TextBox TextMode="TextBoxMode.Search" Placeholder="Search..." /&gt;</code></pre>

<hr />

<h2>Color Picker</h2>
<TextBox TextMode="TextBoxMode.Color" Width="Unit.Pixel(60)" />
<pre><code>&lt;TextBox TextMode="TextBoxMode.Color" /&gt;</code></pre>

<hr />

<h2>With Placeholder Text</h2>
<TextBox Placeholder="Enter your name here" CssClass="form-control" Width="Unit.Pixel(300)" />
<pre><code>&lt;TextBox Placeholder="Enter your name here" /&gt;</code></pre>

<hr />

<h2>With Columns (Size)</h2>
<TextBox Columns="20" Placeholder="20 columns wide" />
<pre><code>&lt;TextBox Columns="20" Placeholder="20 columns wide" /&gt;</code></pre>

