@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<div class="verticalNav">
    <nav class="nav flex-column p-2">
        <a href="/" class="nav-link component-link @GetActiveClass("/")" title="Home" @onclick="OnNavLinkClick">
            <span class="oi oi-home me-2"></span>Home
        </a>

        @foreach (var category in ComponentCatalog.Categories)
        {
            var categoryId = $"cat-{category.ToLowerInvariant().Replace(" ", "-")}";
            var isExpanded = IsCategoryExpanded(category);

            <div class="nav-category mt-2">
                <button class="btn btn-link nav-link category-header d-flex align-items-center w-100 text-start @(isExpanded ? "" : "collapsed")"
                        type="button"
                        aria-expanded="@isExpanded.ToString().ToLower()"
                        @onclick="() => ToggleCategory(category)">
                    <span class="oi oi-chevron-right category-chevron me-2"></span>
                    @category
                    <span class="badge bg-secondary ms-auto">@ComponentCatalog.GetByCategory(category).Count()</span>
                </button>
                <div class="collapse @(isExpanded ? "show" : "")" id="@categoryId">
                    <div class="nav flex-column ms-3">
                        @foreach (var component in ComponentCatalog.GetByCategory(category))
                        {
                            <a href="@component.Route"
                               class="nav-link component-link py-1 @GetActiveClass(component.Route)"
                               title="@component.Description"
                               @onclick="OnNavLinkClick">
                                @component.Name
                            </a>
                            @if (component.SubPages?.Any() == true)
                            {
                                <div class="nav flex-column ms-3">
                                    @foreach (var subPage in component.SubPages)
                                    {
                                        var subRoute = $"{component.Route}/{subPage}";
                                        <a href="@subRoute"
                                           class="nav-link component-link py-1 small @GetActiveClass(subRoute)"
                                           title="@component.Name - @subPage"
                                           @onclick="OnNavLinkClick">
                                            @subPage
                                        </a>
                                    }
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private HashSet<string> expandedCategories = new();
    private string currentUrl = "";
    private bool isDesktop = true;

    [Parameter]
    public EventCallback OnMobileNavClick { get; set; }

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;

        // Check if desktop and expand all categories
        await CheckIfDesktopAndExpandCategories();
    }

    private async Task CheckIfDesktopAndExpandCategories()
    {
        try
        {
            var windowWidth = await JSRuntime.InvokeAsync<int>("eval", "window.innerWidth");
            isDesktop = windowWidth >= 992;
            
            if (isDesktop)
            {
                // Expand all categories on desktop
                foreach (var category in ComponentCatalog.Categories)
                {
                    expandedCategories.Add(category);
                }
            }
            else
            {
                // On mobile, only expand the category containing current page
                ExpandCategoryForCurrentPage();
            }
        }
        catch
        {
            // Fallback: expand all categories
            foreach (var category in ComponentCatalog.Categories)
            {
                expandedCategories.Add(category);
            }
        }
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        ExpandCategoryForCurrentPage();
        StateHasChanged();
    }

    private void ExpandCategoryForCurrentPage()
    {
        var component = ComponentCatalog.Components
            .FirstOrDefault(c => currentUrl.StartsWith(c.Route.TrimStart('/'), StringComparison.OrdinalIgnoreCase));

        if (component != null && !expandedCategories.Contains(component.Category))
        {
            expandedCategories.Add(component.Category);
        }
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleCategory(string category)
    {
        if (expandedCategories.Contains(category))
        {
            expandedCategories.Remove(category);
        }
        else
        {
            expandedCategories.Add(category);
        }
    }

    private async Task OnNavLinkClick()
    {
        // On mobile, collapse the sidebar when a link is clicked
        if (!isDesktop)
        {
            await OnMobileNavClick.InvokeAsync();
        }
    }

    private bool IsCategoryExpanded(string category) => expandedCategories.Contains(category);

    private string GetActiveClass(string href)
    {
        var normalizedHref = href.TrimStart('/');
        var normalizedCurrent = currentUrl.TrimStart('/');

        if (string.IsNullOrEmpty(normalizedHref) && string.IsNullOrEmpty(normalizedCurrent))
            return "active";

        if (!string.IsNullOrEmpty(normalizedHref) &&
            normalizedCurrent.Equals(normalizedHref, StringComparison.OrdinalIgnoreCase))
            return "active";

        return "";
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
