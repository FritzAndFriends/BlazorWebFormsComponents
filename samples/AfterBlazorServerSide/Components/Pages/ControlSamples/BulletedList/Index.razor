<h3>Display Mode: LinkButton (Clickable)</h3>
<BulletedList TItem="object" StaticItems="clickItems" DisplayMode="BulletedListDisplayMode.LinkButton" OnClick="HandleItemClick" />
<p>@clickMessage</p>
<pre><code>&lt;BulletedList TItem="object" 
              StaticItems="clickItems" 
              DisplayMode="BulletedListDisplayMode.LinkButton" 
              OnClick="HandleItemClick" /&gt;

@@code {
    private void HandleItemClick(BulletedListEventArgs e) {
        clickMessage = $"You clicked item at index {e.Index}";
    }
}</code></pre>

