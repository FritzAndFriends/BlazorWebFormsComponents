@page "/ControlSamples/Button"

<h2>Button Demos</h2>

<Nav></Nav>

<p>
	This button has STYLE!
	<div data-audit-control="Button-1">
		<Button OnClick="OnClick" Text="Blue Button"
				BackColor="WebColor.Blue" ForeColor="WebColor.White" />
	</div>
</p>

<p>
	This button does NOT cause validation:
	<div data-audit-control="Button-2">
		<Button CausesValidation="false" Text="No Validation for you!" />
	</div>
</p>

<p>
	This button is not Enabled:
	<div data-audit-control="Button-3">
		<Button Enabled="false" Text="I am not enabled for clicking" />
	</div>

	<br />
	This button is Enabled:
	<div data-audit-control="Button-4">
		<Button Enabled="true" Text="I am enabled for clicking" />
	</div>
</p>

<p>
	This button posts to Bing
	<div data-audit-control="Button-5">
		<Button PostBackUrl="www.bing.com" Text="Post to Bing" />
	</div>
</p>

<span style="font-weight: bold">@TheContent</span>

@code {

	[Parameter]
	public string TheContent { get; set; } = "Not clicked yet!";
	public string bar = "bar";

	void OnClick() {

		TheContent = "I've been clicked";

	}

	void OnCommand(CommandEventArgs args) {

		Console.WriteLine("Command fired");
		var button = (Button)args.Sender;  // Access the sender!
		TheContent = $"Command '{args.CommandName}' from button with text '{button.Text}'";

	}

}

<hr />

<p>Code:</p>
<code>
&lt;Button CommandName="Foo" CommandArgument="bar" OnCommand="OnCommand" OnClick="OnClick" Text="Click me!"<br />
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;AccessKey="b" ToolTip="Click to submit" /&gt;
</code>
