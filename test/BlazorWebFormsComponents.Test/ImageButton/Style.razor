@inherits TestComponentBase
@using static BlazorWebFormsComponents.WebColor
@using BlazorWebFormsComponents

<Fixture Test="ImageButton_Style">
	<ComponentUnderTest>
		<ImageButton ImageUrl="/img/VB.png" AlternateText="Blue Button" BackColor="Blue" ForeColor="White" />
	</ComponentUnderTest>
</Fixture>

@code {
	void ImageButton_Style(Fixture fixture)
	{

		var cut = fixture.GetComponentUnderTest();

		cut.Find("input").HasAttribute("style").ShouldBeTrue();
		var style = cut.Find("input").GetAttribute("style");

		style.ShouldNotBeNull();
		style.ShouldContain("background-color:Blue");
		style.ShouldContain("color:White");

	}
}
