@inherits TestComponentBase
@using BlazorWebFormsComponents

<Fixture Test="ImageButton_Enabled">
	<ComponentUnderTest>
		<ImageButton ImageUrl="/img/VB.png" Enabled="true" />
	</ComponentUnderTest>
</Fixture>

<Fixture Test="ImageButton_Disabled">
	<ComponentUnderTest>
		<ImageButton ImageUrl="/img/VB.png" Enabled="false" />
	</ComponentUnderTest>
</Fixture>

@code {
	void ImageButton_Enabled(Fixture fixture)
	{
		var cut = fixture.GetComponentUnderTest();

		cut.Find("input").HasAttribute("disabled").ShouldBeFalse();
	}

	void ImageButton_Disabled(Fixture fixture)
	{
		var cut = fixture.GetComponentUnderTest();

		cut.Find("input").HasAttribute("disabled").ShouldBeTrue();
	}
}
