
@code {
[Fact]
public void Image_Visible_True_RendersImage()
{
var cut = Render(@<Image ImageUrl="/img/vb.jpg" AlternateText="Visual Basic" Visible="true" />);
cut.MarkupMatches(@<img src="/img/vb.jpg" alt="Visual Basic" />);
}

[Fact]
public void Image_Visible_False_RendersNothing()
{
var cut = Render(@<Image ImageUrl="/img/vb.jpg" AlternateText="Visual Basic" Visible="false" />);
cut.MarkupMatches(@<text></text>);
}
}
