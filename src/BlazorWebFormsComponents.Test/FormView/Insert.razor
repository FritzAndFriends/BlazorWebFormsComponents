@inherits BunitContext




@code {

		[Fact]
public void FormView_InsertButton_EntersInsertMode()
{
	var cut = Render(@<FormView AllowPaging="true" DataKeyNames="Id" OnPageIndexChanging="WidgetFormView_PageIndexChanging" runat="server" Items="Widget.SimpleWidgetList" ItemType="Widget" Context="Item">
		<ItemTemplate>
			<table id="theItemTemplate">
				<tr>
					<td>@Item.Name</td><td>@Item.Price.ToString("C")</td><td>@Item.Id</td>
				</tr>
				<tr>
					<td><Button CommandName="Insert" Text="Insert" /></td>
				</tr>
			</table>
		</ItemTemplate>
		<InsertItemTemplate>
			<label>@Item.Name</label>
		</InsertItemTemplate>
	</FormView>);
	var insertButton = cut.Find("button");
	insertButton.ShouldNotBeNull();
	insertButton.Click();
	cut.Find("label").ShouldNotBeNull();
	cut.FindAll("button").Count().ShouldBe(0);
}

