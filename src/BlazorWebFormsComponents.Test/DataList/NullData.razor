@inherits BunitContext

@code {

	[Fact]
	public void DataList_NullData_RendersEmptyMarkup()
	{
		var cut = Render(
			@<DataList Items="null"
								ItemType="Widget"
								RepeatLayout="Flow"
								Context="Item">
				<HeaderTemplate>My Widget List</HeaderTemplate>
				<ItemTemplate>@Item.Name</ItemTemplate>
			</DataList>
		);

		cut.Markup.Trim().ShouldBe(string.Empty);
	}

}
