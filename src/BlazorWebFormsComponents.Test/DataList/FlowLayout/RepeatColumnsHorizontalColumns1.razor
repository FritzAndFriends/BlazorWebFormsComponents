							RepeatLayout="Flow"
							RepeatColumns="1"
							GridLines="Horizontal"
							Context="Item">
			<HeaderTemplate>HeaderTemplate</HeaderTemplate>
			<ItemTemplate>@Item.Id</ItemTemplate>
			<FooterTemplate>FooterTemplate</FooterTemplate>
