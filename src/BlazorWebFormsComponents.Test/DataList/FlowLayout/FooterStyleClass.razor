@using BlazorWebFormsComponents

@code {

	[Fact]
	public void DataList_FlowLayout_FooterStyleClass_AppliesCssClass()
	{
		var cut = Render(
			@<DataList Items="Widget.SimpleWidgetList"
								ItemType="Widget"
								RepeatLayout="Flow"
								Context="Item">
				<FooterStyleContent>
					<FooterStyle CssClass="myClass"></FooterStyle>
				</FooterStyleContent>
				<FooterTemplate>FooterTemplate</FooterTemplate>
				<ItemTemplate>@Item.Name</ItemTemplate>
			</DataList>
		);
		System.Diagnostics.Debug.WriteLine(cut.Markup);
		var footer = cut.Find("span").Children.FirstOrDefault(x => x.InnerHtml.Contains("FooterTemplate"));
		var cssClass = footer.GetAttribute("class");

		cssClass.ShouldNotBeNull();
		cssClass.ShouldBe("myClass");
	}

}
