
@code {

	[Fact]
	public void DataList_FlowLayout_AlternatingTemplate_RendersAlternatingItems()
	{
		var cut = Render(
			@<DataList Items="Widget.SimpleWidgetList"
								ItemType="Widget"
								RepeatLayout="Flow"
								Context="Item">
				<HeaderTemplate>My Widget List</HeaderTemplate>
				<ItemTemplate>@Item.Name</ItemTemplate>
				<AlternatingItemTemplate>== @Item.Name ==</AlternatingItemTemplate>
			</DataList>
		);

		cut.FindAll("span").Count().ShouldBe(Widget.SimpleWidgetList.Length+2);
		cut.FindAll("span").Skip(1).First().TextContent.ShouldBe("My Widget List");

		cut.FindAll("span").Count(c => c.TextContent.StartsWith("== ") && c.TextContent.EndsWith(" ==")).ShouldBe((int)Math.Floor(Widget.SimpleWidgetList.Length/2.0m));
	}

}
