
@code {

	[Fact]
	public void DataList_FlowLayout_Empty_RendersHeaderOnly()
	{
		var cut = Render(
			@<DataList Items="new Widget[] { }"
								ItemType="Widget"
								RepeatLayout="Flow"
								Context="Item">
				<HeaderTemplate>My Widget List</HeaderTemplate>
				<ItemTemplate>@Item.Name</ItemTemplate>
			</DataList>
		);

		cut.FindAll("span").Count().ShouldBe(2);
		cut.FindAll("span").Skip(1).First().TextContent.ShouldBe("My Widget List");
	}

}
