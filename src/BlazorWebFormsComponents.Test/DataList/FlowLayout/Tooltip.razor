
@code {

	[Fact]
	public void DataList_FlowLayout_Tooltip_RendersTitle()
	{
		var cut = Render(
			@<DataList Items="Widget.SimpleWidgetList"
								ItemType="Widget"
								RepeatLayout="Flow"
								ToolTip="This is my tool tip"
								Context="Item">
				<HeaderTemplate>My Widget List</HeaderTemplate>
				<ItemTemplate>@Item.Name</ItemTemplate>
			</DataList>
		);

		var theElement = cut.Find("span");
		theElement.HasAttribute("title").ShouldBeTrue();
		theElement.GetAttribute("title").ShouldBe("This is my tool tip");
	}

}
