
@code {
    [Fact]
    public void DataList_TableLayout_Tabindex_RendersCorrectly()
    {
        var cut = Render(@<DataList Items="Widget.SimpleWidgetList"
                                    ItemType="Widget"
                                    RepeatLayout="Table"
                                    TabIndex="1"
                                    Context="Item">
            <HeaderTemplate>My Widget List</HeaderTemplate>
            <ItemTemplate>@Item.Name</ItemTemplate>
        </DataList>);

        cut.Find("table").HasAttribute("tabindex").ShouldBeTrue();
        cut.Find("table").GetAttribute("tabindex").ShouldBe("1");
    }
}
