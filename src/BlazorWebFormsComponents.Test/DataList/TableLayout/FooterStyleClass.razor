@using BlazorWebFormsComponents

@code {
    [Fact]
    public void DataList_TableLayout_FooterStyleClass_RendersCorrectly()
    {
        var cut = Render(@<DataList Items="Widget.SimpleWidgetList" ItemType="Widget" RepeatLayout="Enums.RepeatLayout.Table" Context="Item">
            <FooterStyleContent>
                <FooterStyle CssClass="myClass"></FooterStyle>
            </FooterStyleContent>
            <FooterTemplate>FooterTemplate</FooterTemplate>
            <ItemTemplate>@Item.Name</ItemTemplate>
        </DataList>);
        var footer = cut.FindAll("td").FirstOrDefault(x => x.InnerHtml.Contains("FooterTemplate"));
        footer.HasAttribute("class").ShouldBeTrue();
        var cssClass = footer.GetAttribute("class");
        cssClass.ShouldNotBeNull();
        cssClass.ShouldBe("myClass");
    }
}
