
@code {
    [Fact]
    public void DataList_TableLayout_SimpleAccessibleHeaders_RendersCorrectly()
    {
        var cut = Render(@<DataList Items="Widget.SimpleWidgetList"
                                    ItemType="Widget"
                                    RepeatLayout="Enums.RepeatLayout.Table"
                                    UseAccessibleHeader="true"
                                    Context="Item">
            <HeaderTemplate>My Widget List</HeaderTemplate>
            <ItemTemplate>@Item.Name</ItemTemplate>
        </DataList>);

        cut.FindAll("td").Count().ShouldBe(Widget.SimpleWidgetList.Length);
        cut.FindAll("th").Count().ShouldBe(1);
        cut.Find("th").TextContent.ShouldBe("My Widget List");
    }
}
