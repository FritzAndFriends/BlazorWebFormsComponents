@using BlazorWebFormsComponents
@using System.Linq;

@code {
    [Fact]
    public void DataList_TableLayout_FooterStyleEmpty_RendersCorrectly()
    {
        var cut = Render(@<DataList Items="Widget.SimpleWidgetList" ItemType="Widget" RepeatLayout="Table" Context="Item">
            <FooterTemplate>FooterTemplate</FooterTemplate>
            <ItemTemplate>@Item.Name</ItemTemplate>
        </DataList>);
        var footer = cut.FindAll("td").FirstOrDefault(x => x.InnerHtml.Contains("FooterTemplate"));
        footer.HasAttribute("style").ShouldBeFalse();
    }
}



