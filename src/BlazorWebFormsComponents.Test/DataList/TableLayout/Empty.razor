
@code {
    [Fact]
    public void DataList_TableLayout_Empty_RendersCorrectly()
    {
        var cut = Render(@<DataList Items="new Widget[] { }" ItemType="Widget" Context="Item">
            <HeaderTemplate>My Widget List</HeaderTemplate>
            <ItemTemplate>@Item.Name</ItemTemplate>
        </DataList>);
        cut.FindAll("table").Count().ShouldBe(1);
        cut.FindAll("td").Count().ShouldBe(1);
        cut.Find("td").TextContent.ShouldBe("My Widget List");
    }
}




