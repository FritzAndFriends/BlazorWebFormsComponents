@inherits BunitContext
@using static BlazorWebFormsComponents.Enums.DataListEnum

@code {
    [Fact]
    public void DataList_TableLayout_GridLines_Both_RendersCorrectly()
    {
        var cut = Render(@<DataList Items="Widget.SimpleWidgetList" ItemType="Widget" RepeatLayout="Table" GridLines="Both" Context="Item">
            <HeaderTemplate>My Widget List</HeaderTemplate>
            <ItemTemplate>@Item.Name</ItemTemplate>
        </DataList>);
        cut.Find("table").HasAttribute("rules");
        cut.Find("table").GetAttribute("rules").ShouldBe("both");
    }

    [Fact]
    public void DataList_TableLayout_GridLines_Rows_RendersCorrectly()
    {
        var cut = Render(@<DataList Items="Widget.SimpleWidgetList" ItemType="Widget" RepeatLayout="Table" GridLines="Horizontal" Context="Item">
            <HeaderTemplate>My Widget List</HeaderTemplate>
            <ItemTemplate>@Item.Name</ItemTemplate>
        </DataList>);
        cut.Find("table").HasAttribute("rules");
        cut.Find("table").GetAttribute("rules").ShouldBe("rows");
    }

    [Fact]
    public void DataList_TableLayout_GridLines_Cols_RendersCorrectly()
    {
        var cut = Render(@<DataList Items="Widget.SimpleWidgetList" ItemType="Widget" RepeatLayout="Table" GridLines="Vertical" Context="Item">
            <HeaderTemplate>My Widget List</HeaderTemplate>
            <ItemTemplate>@Item.Name</ItemTemplate>
        </DataList>);
        cut.Find("table").HasAttribute("rules");
        cut.Find("table").GetAttribute("rules").ShouldBe("cols");
    }
}



