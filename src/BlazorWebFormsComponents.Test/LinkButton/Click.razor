@using Bunit

@code {
    [Fact]
    public void Click_ChangesContent()
    {
        using var ctx = new Bunit.TestContext();
        var theContent = "Not clicked yet!";
        void OnClick() => theContent = "I've been clicked";
        var cut = ctx.RenderComponent<LinkButton>(parameters => parameters
            .Add(p => p.OnClick, EventCallback.Factory.Create(this, OnClick))
            .AddChildContent("Click me!"));
        theContent.ShouldBe("Not clicked yet!");
        cut.Find("a").Click();
        theContent.ShouldBe("I've been clicked");
    }
}

