
@code {
    private string theContent = "Not clicked yet!";
    private void OnClick() => theContent = "I've been clicked";

    [Fact]
    public void Click_ChangesContent()
    {
        theContent = "Not clicked yet!";
        var cut = Render(@<LinkButton OnClick="OnClick">Click me!</LinkButton>);
        theContent.ShouldBe("Not clicked yet!");
        cut.Find("a").Click();
        theContent.ShouldBe("I've been clicked");
    }
}

