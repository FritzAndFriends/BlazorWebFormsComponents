
@code {
    private string theContent = "No Command yet!";
    private void OnCommand(CommandEventArgs args) => theContent = $"Command '{args.CommandName}' : '{args.CommandArgument}'";

    [Fact]
    public void Command_ChangesContent()
    {
        theContent = "No Command yet!";
        var cut = Render(@<LinkButton CommandName="Foo" CommandArgument="@("bar")" OnCommand="OnCommand">Click me!</LinkButton>);
        theContent.ShouldBe("No Command yet!");
        cut.Find("a").Click();
        theContent.ShouldBe("Command 'Foo' : 'bar'");
    }
}

