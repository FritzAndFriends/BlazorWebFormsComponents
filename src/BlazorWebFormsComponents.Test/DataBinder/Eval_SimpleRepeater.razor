@inherits TestComponentBase

<Fixture Test="FirstTest">
	<ComponentUnderTest>
		<Repeater Items="Widget.SimpleWidgetList"
							ItemType="Widget">
			<ItemTemplate><span>@DataBinder.Eval("Name")</span></ItemTemplate>
			<SeparatorTemplate><hr/></SeparatorTemplate>
		</Repeater>
	</ComponentUnderTest>
</Fixture>


@code {

	void FirstTest(Fixture fixture)
	{

		var cut = fixture.GetComponentUnderTest();

		cut.FindAll("span").Count().ShouldBe(Widget.SimpleWidgetList.Length);
		cut.FindAll("hr").Count().ShouldBe(Widget.SimpleWidgetList.Length);

	}


}
