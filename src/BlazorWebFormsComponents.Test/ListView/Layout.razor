@inherits TestComponentBase

<Fixture
	Test="FirstTest"
>
<ComponentUnderTest>
	<ListView Items="Widget.SimpleWidgetList"
						ItemType="Widget"
						Context="Item">
		<ItemTemplate><span>@Item.Name</span></ItemTemplate>
		<LayoutTemplate Context="itemPlaceholder">
			<div>
				<b>Header</b>
				<br/>
				@itemPlaceholder
			</div>
		</LayoutTemplate>
	</ListView>
</ComponentUnderTest>
</Fixture>


@code {

	void FirstTest(Fixture fixture)
	{

		var cut = fixture.GetComponentUnderTest();

		cut.FindAll("span").Count().ShouldBe(Widget.SimpleWidgetList.Length);
		cut.FindAll("div").Count().ShouldBe(1);
		cut.FindAll("b").Count().ShouldBe(1);

	}


}
