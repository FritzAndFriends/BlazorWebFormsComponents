@inherits TestComponentBase

<Fixture
	Test="FirstTest"
>
<ComponentUnderTest>
	<ListView Items="Widget.SimpleWidgetList"
						ItemType="Widget"
						Context="Item">
		<ItemTemplate><span>@Item.Name</span></ItemTemplate>
		<AlternatingItemTemplate><b>@Item.Name</b></AlternatingItemTemplate>
	</ListView>
</ComponentUnderTest>
</Fixture>


@code {

	void FirstTest()
	{

		var cut = GetComponentUnderTest();

		cut.FindAll("span").Count().ShouldBe(2, "Did not render 2 SPAN elements");
		cut.FindAll("b").Count().ShouldBe(1, "Did not render 1 B element");

	}


}
