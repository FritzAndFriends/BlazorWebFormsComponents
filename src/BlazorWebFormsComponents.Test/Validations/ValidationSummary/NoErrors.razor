
@code {

	private ExampleModel exampleModel = new ExampleModel();

	[Fact]
	public void ValidationSummary_NoErrors_HiddenByDefault()
	{
		var cut = Render(
			@<EditForm Model="@exampleModel">
				<AspNetValidationSummary />
			</EditForm>
		);

		cut.FindAll("div").Count.ShouldBe(1);

		cut.Find("div").HasAttribute("style").ShouldBeTrue();
		cut.Find("div").GetAttribute("style").ShouldContain("display:none;");

	}

	public class ExampleModel
	{
		public string Name { get; set; }
	}

}
