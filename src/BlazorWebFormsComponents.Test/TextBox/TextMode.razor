@using TBM = BlazorWebFormsComponents.Enums.TextBoxMode

@code {

	[Fact]
	public void TextBox_PasswordMode_RendersPasswordInput()
	{
		// Arrange & Act
		var cut = Render(@<TextBox TextMode="TBM.Password" Text="secret" />);

		// Assert
		var input = cut.Find("input");
		input.GetAttribute("type").ShouldBe("password");
		input.GetAttribute("value").ShouldBe("secret");
	}

