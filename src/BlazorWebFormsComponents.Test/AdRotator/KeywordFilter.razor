@inherits BunitContext

@code {
	[Fact]
	public void AdRotator_KeywordFilter_FiltersAdsByKeyword()
	{
		var cut = Render(@<AdRotator AdvertisementFile="Ads2.xml" KeywordFilter="VB" Target="_blank" />);
		var img = cut.Find("img");
		var alternateText = img.Attributes["alt"].Value;

		Assert.Contains(alternateText, new[] { "Visual Basic", "VB" });
	}
}
