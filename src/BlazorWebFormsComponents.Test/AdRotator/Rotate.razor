
@code {
	[Fact]
	public void AdRotator_Rotate_ShowsRandomAd()
	{
		var cut = Render(@<AdRotator AdvertisementFile="Ads2.xml" Target="_blank" />);
		var img = cut.Find("img");
		var alternateText = img.Attributes["alt"].Value;

		Assert.Contains(alternateText, new[] { "CSharp", "Visual Basic", "VB" });
	}

	[Fact]
	public void AdRotator_Rotate_WithCustomFieldsAttributes()
	{
		var cut = Render(@<AdRotator AdvertisementFile="Ads4.xml" AlternateTextField="Alt" ImageUrlField="Image" NavigateUrlField="Url" Target="_blank" />);
		var anchor = cut.Find("a");
		var img = cut.Find("img");
		var alternatText = img.Attributes["alt"].Value;

		Assert.True(anchor.HasAttribute("href"));
		Assert.Contains(alternatText, new[] { "CSharp", "Visual Basic" });
	}
}
