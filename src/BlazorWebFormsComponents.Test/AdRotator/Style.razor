@using static BlazorWebFormsComponents.WebColor
@inherits BunitContext

@code {
	[Fact]
	public void AdRotator_Style_RendersBackColorAndForeColor()
	{
		var cut = Render(@<AdRotator AdvertisementFile="Ads2.xml" BackColor="Blue" ForeColor="White" Target="_blank" />);
		var anchor = cut.Find("a");
		anchor.HasAttribute("style").ShouldBeTrue();

		var style = anchor.GetAttribute("style");
		style.ShouldNotBeNull();
		style.ShouldContain("background-color:Blue");
		style.ShouldContain("color:White");
	}
}
