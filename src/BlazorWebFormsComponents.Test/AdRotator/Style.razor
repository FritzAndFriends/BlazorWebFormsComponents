@using static BlazorWebFormsComponents.WebColor
@inherits TestComponentBase

<Fixture Test="StyleTest">
	<ComponentUnderTest>
		<AdRotator AdvertisementFile="Ads2.xml" BorderColor="Blue" BorderWidth="2" Target="_blank"></AdRotator>
	</ComponentUnderTest>
</Fixture>

@code {
	void StyleTest(Fixture fixture)
	{
		var cut = fixture.GetComponentUnderTest();
		var anchor = cut.Find("a");
		anchor.HasAttribute("style").ShouldBeTrue();

		var style = anchor.GetAttribute("style");
		style.ShouldNotBeNull();
		style.ShouldContain("border-color:Blue");
		style.ShouldContain("border-width:2");
	}
}
