@using BlazorWebFormsComponents

@code {
	[Fact]
	public void ImageButton_Visible_RendersInput()
	{
		var cut = Render(@<ImageButton ImageUrl="/img/VB.png" AlternateText="Blue Button" Visible="true" />);
		cut.MarkupMatches(@<input type="image" src="/img/VB.png" alt="Blue Button" longdesc="" />);
	}

	[Fact]
	public void ImageButton_NotVisible_RendersEmpty()
	{
		var cut = Render(@<ImageButton ImageUrl="/img/VB.png" AlternateText="Blue Button" Visible="false" />);
		cut.MarkupMatches(@<text></text>);
	}
}
