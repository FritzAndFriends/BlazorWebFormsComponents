@inherits BunitContext
@using BlazorWebFormsComponents

@code {
	[Fact]
	public void ImageButton_WithToolTip_HasTitleAttribute()
	{
		var cut = Render(@<ImageButton ImageUrl="/img/VB.png" ToolTip="Visual Basic" />);

		cut.Find("input").HasAttribute("title").ShouldBeTrue();
	}

	[Fact]
	public void ImageButton_WithoutToolTip_NoTitleAttribute()
	{
		var cut = Render(@<ImageButton ImageUrl="/img/VB.png" />);

		cut.Find("input").HasAttribute("title").ShouldBeFalse();
	}
}
