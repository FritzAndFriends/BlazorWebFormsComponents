@inherits TestComponentBase
@using BlazorWebFormsComponents

<Fixture Test="ImageButton_HasToolTip">
	<ComponentUnderTest>
		<ImageButton ImageUrl="/img/VB.png" ToolTip="Visual Basic" />
	</ComponentUnderTest>
</Fixture>

<Fixture Test="ImageButton_HasNotToolTip">
	<ComponentUnderTest>
		<ImageButton ImageUrl="/img/VB.png" />
	</ComponentUnderTest>
</Fixture>

@code {
	void ImageButton_HasToolTip(Fixture fixture)
	{
		var cut = fixture.GetComponentUnderTest();

		cut.Find("input").HasAttribute("title").ShouldBeTrue();
	}

	void ImageButton_HasNotToolTip(Fixture fixture)
	{
		var cut = fixture.GetComponentUnderTest();

		cut.Find("input").HasAttribute("title").ShouldBeFalse();
	}
}
