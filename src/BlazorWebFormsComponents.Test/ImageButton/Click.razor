@inherits TestComponentBase
@using BlazorWebFormsComponents

<Fixture Test="Command">
	<ComponentUnderTest>
		<ImageButton ImageUrl="/img/VB.png" Enabled="false" OnCommand="Clicked" CommandName="Name" CommandArgument='"Arg"'  />
	</ComponentUnderTest>
</Fixture>

@code {
	void Command(Fixture fixture)
	{
		var cut = fixture.GetComponentUnderTest();
		cut.Find("input").Click();

		commandName.ShouldBe("Name");
		commandArg.ShouldBe("Arg");

	}

	string commandName = string.Empty;
	string commandArg = string.Empty;

	void Clicked(CommandEventArgs args) {

		commandName = args.CommandName;
		commandArg = args.CommandArgument.ToString();

	}

}
