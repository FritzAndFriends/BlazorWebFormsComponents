@inherits BunitContext
@using BlazorWebFormsComponents

@code {
	[Fact]
	public void ImageButton_Enabled_NoDisabledAttribute()
	{
		var cut = Render(@<ImageButton ImageUrl="/img/VB.png" Enabled="true" />);

		cut.Find("input").HasAttribute("disabled").ShouldBeFalse();
	}

	[Fact]
	public void ImageButton_Disabled_HasDisabledAttribute()
	{
		var cut = Render(@<ImageButton ImageUrl="/img/VB.png" Enabled="false" />);

		cut.Find("input").HasAttribute("disabled").ShouldBeTrue();
	}
}
