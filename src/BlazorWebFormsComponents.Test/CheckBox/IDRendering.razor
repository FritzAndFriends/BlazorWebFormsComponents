@inherits BlazorWebFormsTestContext
@using Shouldly

@code {
	[Fact]
	public void CheckBox_WithID_RendersIDInHTML()
	{
		// Arrange & Act
		var cut = Render(@<CheckBox ID="myCheckBox" Text="Accept terms" />);

		// Assert
		var input = cut.Find("input[type='checkbox']");
		input.GetAttribute("id").ShouldBe("myCheckBox");
	}

	[Fact]
	public void CheckBox_WithoutID_RendersGeneratedID()
	{
		// Arrange & Act
		var cut = Render(@<CheckBox Text="Accept terms" />);

		// Assert
		var input = cut.Find("input[type='checkbox']");
		// Should still have an ID (generated GUID) for label association
		input.HasAttribute("id").ShouldBeTrue();
		input.GetAttribute("id").Length.ShouldBeGreaterThan(0);
	}
}
