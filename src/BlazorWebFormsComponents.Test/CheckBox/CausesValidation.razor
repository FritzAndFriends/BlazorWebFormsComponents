@using BlazorWebFormsComponents.Validations

@code {

	[Fact]
	public void CheckBox_CausesValidation_DefaultIsTrue()
	{
		// Arrange & Act
		var cut = Render(@<CheckBox Text="Accept terms" />);

		// Assert — parameter exists and defaults to true; no assertion on HTML needed,
		// we verify the component accepts the parameter without error
		cut.Find("input[type='checkbox']").ShouldNotBeNull();
	}

	[Fact]
	public void CheckBox_CausesValidation_CanBeSetToFalse()
	{
		// Arrange & Act
		var cut = Render(@<CheckBox Text="Accept terms" CausesValidation="false" />);

		// Assert — component renders without error
		cut.Find("input[type='checkbox']").ShouldNotBeNull();
	}

	[Fact]
	public void CheckBox_ValidationGroup_ParameterAccepted()
	{
		// Arrange & Act
		var cut = Render(@<CheckBox Text="Accept terms" ValidationGroup="GroupA" />);

		// Assert — component renders without error
		cut.Find("input[type='checkbox']").ShouldNotBeNull();
	}

