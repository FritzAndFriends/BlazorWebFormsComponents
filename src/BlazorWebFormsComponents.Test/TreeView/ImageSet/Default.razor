@inherits BunitContext
@using static BlazorWebFormsComponents.Enums.TreeViewImageSet

@code {

	[Fact]
	public void TreeView_ImageSet_Default_RendersCorrectImages()
	{
		// Arrange/Act
		var cut = Render(
			@<TreeView id="SampleTreeView"
								ImageSet="_Default"
								runat="server">

				<Nodes>

					<TreeNode Value="Home"
										NavigateUrl="Home.aspx"
										Text="Home"
										Target="Content"
										ToolTip="Home Tooltip"
										Expanded="true">

						<TreeNode Value="Page 1"
											NavigateUrl="Page1.aspx"
											Text="Page1"
											Target="Content">

							<TreeNode Value="Section 1"
												NavigateUrl="Section1.aspx"
												Text="Section 1"
												Target="Content" />

						</TreeNode>

						<TreeNode Value="Page 2"
											NavigateUrl="Page2.aspx"
											Text="Page 2"
											Target="Content">

						</TreeNode>

					</TreeNode>

				</Nodes>

			</TreeView>
		);

		var collapseImg = "_content/Fritz.BlazorWebFormsComponents/TreeView/Default_Collapse.gif";

		// Asserts
		var images = cut.FindAll("img");
		images.Count().ShouldBe(4);

		images[0].GetAttribute("src").ShouldBe(collapseImg);
		images[1].GetAttribute("src").ShouldBe(collapseImg);
	}

}
