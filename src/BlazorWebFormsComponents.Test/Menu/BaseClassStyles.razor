@using static BlazorWebFormsComponents.WebColor

@code {

	[Fact]
	public void Menu_BackColor_AppliesAsStyle()
	{
		JSInterop.Mode = JSRuntimeMode.Loose;
		WebColor lightBlue = "LightBlue";

		var cut = Render(
			@<Menu BackColor="lightBlue">
				<Items>
					<MenuItem Text="Home" Value="home" />
				</Items>
			</Menu>
		);

		cut.Markup.ShouldContain("background-color");
	}

	[Fact]
	public void Menu_ForeColor_AppliesAsStyle()
	{
		JSInterop.Mode = JSRuntimeMode.Loose;
		WebColor red = "Red";

		var cut = Render(
			@<Menu ForeColor="red">
				<Items>
					<MenuItem Text="Home" Value="home" />
				</Items>
			</Menu>
		);

		cut.Markup.ShouldContain("color");
	}

	[Fact]
	public void Menu_CssClass_AppliedToContainer()
