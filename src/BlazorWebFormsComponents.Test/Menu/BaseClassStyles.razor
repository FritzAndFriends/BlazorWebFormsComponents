			</Menu>
		);

		cut.Markup.ShouldContain("width");
	}

	[Fact]
	public void Menu_Height_AppliesAsStyle()
	{
		JSInterop.Mode = JSRuntimeMode.Loose;

		var cut = Render(
			@<Menu Height="100">
				<Items>
