@using static BlazorWebFormsComponents.WebColor
@using static BlazorWebFormsComponents.Enums.BorderStyle
@using BlazorWebFormsComponents

@code {

	[Fact]
	public void Button_WithBackColorAndForeColor_AppliesStyleAttribute()
	{
		// Arrange
		var cut = Render(@<Button Text="Blue Button" BackColor="Blue" ForeColor="White" />);

		// Act
		var button = cut.Find("button");

		// Assert
		button.HasAttribute("style").ShouldBeTrue();
		var style = button.GetAttribute("style");

		style.ShouldNotBeNull();
		style.ShouldContain("background-color:Blue");
		style.ShouldContain("color:White");
	}

}
