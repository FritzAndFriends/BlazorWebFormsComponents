@inherits BaseModelBindingComponent<ItemType>
@typeparam ItemType

@if (Visible && Enabled)
{

	@HeaderTemplate

	@if (Items?.Any() ?? false)
	{

		@foreach (var item in Items)
		{

			<CascadingValue Name="CurrentDataBoundItem" Value="item">
				@if (AlternatingItemTemplate == null || ItemsList.FindIndex(i => i.Equals(item)) % 2 == 0)
				{
					@ItemTemplate(item)
				}
				else
				{
					@AlternatingItemTemplate(item)
				}

				@if (SeparatorTemplate != null)
				{
					@SeparatorTemplate
				}

			</CascadingValue>
		}
	}

	@FooterTemplate

}
