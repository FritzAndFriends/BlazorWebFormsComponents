@inherits DataBoundComponent<Advertisment>
@using BlazorWebFormsComponents.DataBinding

@{
	var activeAdvertisment = GetActiveAdvertisment();
}

@if (activeAdvertisment != null)
{
	<a href="@activeAdvertisment.NavigateUrl" target="@Target" style="@Style" class="@CssClass" title="@ToolTip"><img src="@activeAdvertisment.ImageUrl" width="@activeAdvertisment.Width" height="@activeAdvertisment.Height" alt="@activeAdvertisment.AlternateText" /></a>
}
