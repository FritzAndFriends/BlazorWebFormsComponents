@inherits ButtonBaseComponent
@{
	var hasToolTip = !string.IsNullOrEmpty(ToolTip);
}

@if (Visible)
{
	if (Enabled)
	{
		if (hasToolTip)
		{
			<input type="image" src="@ImageUrl" alt="@AlternateText" longdesc="@DescriptionUrl" style="@CalculatedStyle" class="@CssClass" title="@ToolTip" @onclick="Click" />
		}
		else
		{
			<input type="image" src="@ImageUrl" alt="@AlternateText" longdesc="@DescriptionUrl" style="@CalculatedStyle" class="@CssClass" @onclick="Click" />
		}
	}
	else
	{
		if (hasToolTip)
		{
			<input type="image" src="@ImageUrl" alt="@AlternateText" longdesc="@DescriptionUrl" style="@CalculatedStyle" class="@CssClass" disabled="disabled" title="@ToolTip" @onclick="Click" />
		}
		else
		{
			<input type="image" src="@ImageUrl" alt="@AlternateText" longdesc="@DescriptionUrl" style="@CalculatedStyle" class="@CssClass" disabled="disabled" @onclick="Click" />
		}
	}
}
