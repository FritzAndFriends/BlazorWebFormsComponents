@inherits BaseStyledComponent

@if (Visible)
{
	@if (!string.IsNullOrEmpty(AssociatedControlID))
	{
		<label for="@AssociatedControlID" id="@ClientID" class="@GetCssClassOrNull()" style="@Style" accesskey="@GetAccessKeyOrNull()" title="@ToolTip">@Text</label>
	}
	else
	{
		<span id="@ClientID" class="@GetCssClassOrNull()" style="@Style" accesskey="@GetAccessKeyOrNull()" title="@ToolTip">@Text</span>
	}
}

@code {
	private string GetCssClassOrNull()
	{
		return !string.IsNullOrEmpty(CssClass) ? CssClass : null;
	}

	private string GetAccessKeyOrNull()
	{
		return !string.IsNullOrEmpty(AccessKey) ? AccessKey : null;
	}
}
