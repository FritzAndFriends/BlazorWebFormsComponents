@inherits BaseModelBindingComponent<ItemType>
@typeparam ItemType

@if (LayoutTemplate != null) {
	@:<!-- LayoutTemplate is not supported in Blazor.  Wrap the ListView component with the layout desired -->
}

@{ 

	var rowCounter = 0;

}

@if (!Visible) {
	<!-- Control is not visible -->
}
else if (Items == null || !Items.Any())
{
	@EmptyDataTemplate
}
else
{

	if (OnDataBinding.HasDelegate) OnDataBinding.InvokeAsync(EventArgs.Empty);

	@foreach (var item in Items)
	{


		@if (AlternatingItemTemplate == null || rowCounter % 2 == 0)
		{
			@ItemTemplate(item)
		}
		else
		{
			@AlternatingItemTemplate(item)
		}

		@if (ItemSeparatorTemplate != null) {
				@ItemSeparatorTemplate
		}

		rowCounter++;

	}

	if (OnDataBound.HasDelegate) OnDataBound.InvokeAsync(EventArgs.Empty);

}
