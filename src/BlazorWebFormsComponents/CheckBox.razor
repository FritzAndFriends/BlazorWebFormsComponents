@inherits BaseStyledComponent

@if (Visible)
{
	@if (!string.IsNullOrEmpty(Text))
	{
		@if (TextAlign == Enums.TextAlign.Left)
		{
			<label for="@_inputId">@Text</label>
			<input id="@_inputId" type="checkbox" checked="@Checked" disabled="@(!Enabled)" class="@CssClass" style="@Style" title="@ToolTip" @onchange="HandleChange" />
		}
		else
		{
			<input id="@_inputId" type="checkbox" checked="@Checked" disabled="@(!Enabled)" class="@CssClass" style="@Style" title="@ToolTip" @onchange="HandleChange" />
			<label for="@_inputId">@Text</label>
		}
	}
	else
	{
		<input id="@_inputId" type="checkbox" checked="@Checked" disabled="@(!Enabled)" class="@CssClass" style="@Style" title="@ToolTip" @onchange="HandleChange" />
	}
}
